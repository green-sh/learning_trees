{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Plot Test",
            "type": "python",
            "request": "launch",
            "module": "test.plot_regression_tree",
            "cwd": "${workspaceFolder}/src",
            "justMyCode": true
        },
        {
            "name": "Unittest",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "cwd": "${workspaceFolder}",
            "args": [
                "discover",
                "-s",
                "src/test/",
                "-t",
                "src/",
            ],
            "justMyCode": true
        }
    ]
}